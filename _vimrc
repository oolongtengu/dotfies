set laststatus=2

set nu
"set cursorline
set incsearch
set hlsearch
set ignorecase
set smartcase

set autoindent
set backspace=2
set cindent
set copyindent
set tabstop=2


set shiftwidth=2
set expandtab
set smarttab
set showcmd "
syntax on
set background=dark
set autochdir
set clipboard+=unnamed
set paste
